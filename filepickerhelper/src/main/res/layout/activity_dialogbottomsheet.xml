<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_margin="@dimen/spacing_standard"
    android:orientation="vertical"
    android:padding="@dimen/spacing_standard">

    <RelativeLayout
        android:id="@+id/rlGalleryView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_marginBottom="@dimen/spacing_standard">

        <ImageView
            android:id="@+id/FAB_gallery"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/spacing_standard"
            android:src="@drawable/ic_gallery" />

        <TextView
            android:id="@+id/txt_bs_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_standard"
            android:layout_toRightOf="@+id/FAB_gallery"
            android:gravity="center"
            android:text="@string/txt_Gallery"
            android:textSize="@dimen/font_large" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlCameraView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_marginBottom="@dimen/spacing_standard">

        <ImageView
            android:id="@+id/FAB_Camera"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/spacing_standard"

            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/txt_bs_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_standard"
            android:layout_toRightOf="@+id/FAB_Camera"
            android:gravity="center"
            android:text="@string/txt_Camera"
            android:textSize="@dimen/font_large" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFileView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_marginBottom="@dimen/spacing_standard">

        <ImageView
            android:id="@+id/FAB_File"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/spacing_standard"
            android:src="@drawable/ic_file" />

        <TextView
            android:id="@+id/txt_bs_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacing_standard"
            android:layout_toRightOf="@+id/FAB_File"
            android:gravity="center"
            android:text="@string/txt_file"
            android:textSize="@dimen/font_large" />
    </RelativeLayout>
</LinearLayout>